@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">
                    <i class="bi bi-lock-fill"></i> Đăng nhập
                </h3>

                <div id="loginError" class="alert alert-danger d-none" role="alert"></div>
                <div id="loginSuccess" class="alert alert-success d-none" role="alert"></div>

                <form id="loginForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email"
                               placeholder="email@example.com" required>
                        <div class="invalid-feedback">Vui lòng nhập email hợp lệ</div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control" id="password" name="password"
                               placeholder="Nhập mật khẩu" required>
                        <div class="invalid-feedback">Vui lòng nhập mật khẩu</div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                        <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-2" id="loginBtn">
                        <span id="loginText">Đăng nhập</span>
                        <span id="loginSpinner" class="spinner-border spinner-border-sm d-none ms-2"></span>
                    </button>
                </form>

                <div class="mt-3 text-center">
                    <p class="mb-0">Chưa có tài khoản? <a href="/auth/register">Đăng ký ngay</a></p>
                </div>

                <hr class="my-3">

                <div class="text-center">
                    <small class="text-muted">
                        Tài khoản demo:<br>
                        <strong>admin@bookdb.com</strong> / Admin@123<br>
                        <strong>user@bookdb.com</strong> / User@123
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-fill demo account (optional)
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('demo') === 'admin') {
                $('#email').val('admin@bookdb.com');
                $('#password').val('Admin@123');
            }

            $('#loginForm').on('submit', function(e) {
                e.preventDefault();

                const email = $('#email').val().trim();
                const password = $('#password').val();
                const rememberMe = $('#rememberMe').is(':checked');

                // Validate
                if (!email || !password) {
                    showError('Vui lòng điền đầy đủ thông tin');
                    return;
                }

                // Disable button
                $('#loginBtn').prop('disabled', true);
                $('#loginText').text('Đang đăng nhập...');
                $('#loginSpinner').removeClass('d-none');
                hideMessages();

                // Call API
                $.ajax({
                    url: '/api/auth/login',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        email: email,
                        password: password,
                        rememberMe: rememberMe
                    }),
                    success: function(response) {
                        if (response.success) {
                            // Save tokens
                            window.JwtHelper.saveTokens(response.token, response.refreshToken);
                            window.JwtHelper.saveUser(response.user);

                            showSuccess('✅ Đăng nhập thành công! Đang chuyển hướng...');

                            // Redirect after 1 second
                            setTimeout(function() {
                                window.location.href = '/documents';
                            }, 1000);
                        } else {
                            showError(response.message || 'Đăng nhập thất bại');
                            resetButton();
                        }
                    },
                    error: function(xhr) {
                        let errorMsg = 'Đăng nhập thất bại';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        } else if (xhr.status === 401) {
                            errorMsg = 'Email hoặc mật khẩu không đúng';
                        } else if (xhr.status === 0) {
                            errorMsg = 'Không thể kết nối đến server';
                        }
                        showError('❌ ' + errorMsg);
                        resetButton();
                    }
                });
            });

            function showError(message) {
                $('#loginError').html(message).removeClass('d-none');
                $('#loginSuccess').addClass('d-none');
            }

            function showSuccess(message) {
                $('#loginSuccess').html(message).removeClass('d-none');
                $('#loginError').addClass('d-none');
            }

            function hideMessages() {
                $('#loginError, #loginSuccess').addClass('d-none');
            }

            function resetButton() {
                $('#loginBtn').prop('disabled', false);
                $('#loginText').text('Đăng nhập');
                $('#loginSpinner').addClass('d-none');
            }

            // Add enter key support
            $('#email, #password').on('keypress', function(e) {
                if (e.which === 13) {
                    $('#loginForm').submit();
                }
            });
        });
    </script>
}

<style>
    .card {
        border-radius: 15px;
        border: none;
    }

    .card-title i {
        color: #0d6efd;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        border-radius: 8px;
        padding: 10px;
        font-weight: 500;
    }
</style>